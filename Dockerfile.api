# Dockerfile for FastAPI service
FROM python:3.12-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    make \
    libpq-dev \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy production directory structure
COPY requirements.txt /app/requirements.txt
COPY api /app/api
COPY worker /app/worker

# Copy extraction pipeline
COPY core /app/core

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Install langextract from git
RUN pip install --no-cache-dir \
    langextract@git+https://github.com/google/langextract.git \
    || echo "Some optional dependencies may have failed"

# Copy Alembic files
COPY alembic.ini /app/alembic.ini
COPY migrations /app/migrations

# Create necessary directories
RUN mkdir -p /app/logs /app/temp

# Expose port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Default command
CMD ["sh", "-c", "alembic upgrade head && uvicorn api.main:app --host 0.0.0.0 --port 8000"]
